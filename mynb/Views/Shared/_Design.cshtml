<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Моя NoteBene</title>
    <link rel="icon" type="image/png" href="~/images/MyNB.png"/>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
@helper CurrentItem(string item)
{
    if (item == ViewContext.RouteData.Values["action"].ToString())
    {
        @:class="active"
    }
}
<body >
    <div id="header" class="col-lg-12">
        <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <ul class="nav nav-pills">
                    <li @CurrentItem("Index")  >     @Html.ActionLink("Свежие", "index", "page", new { area = "" }, new { @class = "navbar-brand" })         </li>
                    <li @CurrentItem("random") >     @Html.ActionLink("Случайная", "random", "story", new { area = "" }, new { @class = "navbar-brand" })    </li>
                    <li @CurrentItem("add")    >     @Html.ActionLink("Прислать", "add", "story", new { area = "" }, new { @class = "navbar-brand" })        </li>
                    <li @CurrentItem("About")  >     @Html.ActionLink("Зачем всё?", "about", "about", new { area = "" }, new { @class = "navbar-brand" })    </li>
                    <li @CurrentItem("login")  >     @Html.ActionLink("Войти", "index", "admin", new { area = "" }, new { @class = "navbar-brand" })    </li>
                </ul>
            </div>
        <div class="col-lg-2"></div>
    </div>
    <div id="container" class="col-lg-12">
        <div class="col-lg-2"></div>
                <div class="col-lg-8">
                    @RenderBody()
                </div>
        <div class="col-lg-2"></div>

    </div>
    <div id="footer" class="col-lg-12">
        
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <footer>
                <p>&copy; @DateTime.Now.Year - MyNoteBene </p>
            </footer>
        </div>
        <div class="col-lg-2"></div>
    </div>



</body>
</html>